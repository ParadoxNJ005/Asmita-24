    <HorizontalScrollView
        android:id="@+id/hor"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="#151515"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lay2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#151515"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rectangle_bg"
                android:backgroundTint="#E9BD3E"
                android:text="ALL"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="5dp"
                android:background="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rectangle_bg"
                android:backgroundTint="@color/black"
                android:text="Sat 9 Mar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_bg"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/black"
                android:text="Sun 10 Mar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/day3"
                android:layout_width="wrap_content"
                android:background="@drawable/rectangle_bg"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/black"
                android:text="Mon 11 Mar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rectangle_bg"
                android:backgroundTint="@color/black"
                android:text="Tue 12 Mar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/day5"
                android:background="@drawable/rectangle_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/black"
                android:text="Wed 13 Mar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/day6"
                android:layout_width="wrap_content"
                android:background="@drawable/rectangle_bg"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="@color/black"
                android:text="Thu 14 Mar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/day7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rectangle_bg"
                android:backgroundTint="@color/black"
                android:text="Fri 15 Mar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resultRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"
        tools:listitem="@layout/layout_football" />

    <TextView
        android:id="@+id/nore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="No results available"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

